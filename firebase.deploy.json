{
  "firestore": {
    "database": "(default)",
    "location": "nam5",
    "rules": "miscellaneous-development-files/firestore.rules",
    "indexes": "miscellaneous-development-files/firestore.indexes.json"
  },
  "storage": {
    "rules": "miscellaneous-development-files/storage.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "firebase.deploy.json",
      "**/.*",
      "**/node_modules/**",
      "miscellaneous-development-files/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/pages/soto-routes-login.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}
