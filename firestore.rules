rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Drivers collection - authenticated users can read, office/admin can write
    match /drivers/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Expense Batches - authenticated users can read/write
    match /expenseBatches/{batchId} {
      allow read, write: if request.auth != null;
    }
    
    // Expenses - authenticated users can read/write
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }
    
    // Calendar - authenticated users can read/write
    match /calendar/{calendarId} {
      allow read, write: if request.auth != null;
    }
    
    // Routes - authenticated users can read/write
    match /routes/{routeId} {
      allow read, write: if request.auth != null;
    }
    
    // Jobs - authenticated users can read/write
    match /jobs/{jobId} {
      allow read, write: if request.auth != null;
    }
    
    // Offices - authenticated users can read
    match /offices/{officeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Notifications - authenticated users can read/write
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
  }
}
